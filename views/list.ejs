<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(item) {%>
      
      <form action="/delete" method="post">

        <div class="item">
          <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">   <!-- onChange is used to trigger the form when the checkbox is checked -->

          <p><%=  item.name  %></p>
        </div>
        <input type="hidden" name="currentList" value="<%= listTitle %>">

      </form>
     
   <% }) %>
      
     
      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="listButton" value="<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
